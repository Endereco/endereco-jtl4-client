<?xml version='1.0' encoding="ISO-8859-1"?>
<jtlshop3plugin>
    <Name>Endereco - internationale Adressprüfung und Autovervollständigung - DHL Leitcode kompatibel</Name>
    <Description>Optimiert die Stammdaten Ihrer Kunden: korrigiert und normiert die Adressen, unterstützt bei der Eingabe der Adresse und der E-Mail Adresse.</Description>
    <Author>Ilja Weber</Author>
    <URL>https://www.endereco.de</URL>
    <XMLVersion>100</XMLVersion>
    <Shop4Version>400</Shop4Version>
    <PluginID>endereco_jtl4_client</PluginID>
    <Install>
        <Version nr="100">
            <CreateDate>2020-03-04</CreateDate>
            <SQL>install-100.sql</SQL>
        </Version>
        <Hooks>
            <Hook id="10">10_endereco_jtl4_client.php</Hook>
            <Hook id="13">13_endereco_jtl4_client.php</Hook>
            <Hook id="19">19_endereco_jtl4_client.php</Hook>
            <Hook id="23">23_endereco_jtl4_client.php</Hook>
            <Hook id="24">24_endereco_jtl4_client.php</Hook>
            <Hook id="41">41_endereco_jtl4_client.php</Hook>
            <Hook id="76">76_endereco_jtl4_client.php</Hook>
            <Hook id="140">140_endereco_jtl4_client.php</Hook>
            <Hook id="207">207_endereco_jtl4_client.php</Hook>
            <Hook id="213">213_endereco_jtl4_client.php</Hook>
        </Hooks>
        <Locales>
            <Variable>
                <VariableLocalized iso="GER">Adresse prüfen</VariableLocalized>
                <VariableLocalized iso="ENG">Check your address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_popup_headline</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Die von Ihnen eingegebene Adresse scheint nicht korrekt oder unvollständig zu sein. Bitte wählen Sie die korrekte Adresse aus.</VariableLocalized>
                <VariableLocalized iso="ENG">The address you entered seems to have a problem. Please select an address from options under.</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_popup_subline</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Ihre Eingabe:</VariableLocalized>
                <VariableLocalized iso="ENG">Your entry:</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_your_input</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">(bearbeiten)</VariableLocalized>
                <VariableLocalized iso="ENG">(edit)</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_edit_input</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Unsere Vorschläge:</VariableLocalized>
                <VariableLocalized iso="ENG">Our suggestions:</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_our_suggestions</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Auswahl übernehmen</VariableLocalized>
                <VariableLocalized iso="ENG">Use selected address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_use_selected</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Adresse prüfen</VariableLocalized>
                <VariableLocalized iso="ENG">Check your address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_general_address</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Rechnungsadresse prüfen</VariableLocalized>
                <VariableLocalized iso="ENG">Check your billing address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_billing_address</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Lieferadresse prüfen</VariableLocalized>
                <VariableLocalized iso="ENG">Check your shipping address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_shipping_address</Name>
            </Variable>
            <Variable>
                <VariableLocalized iso="GER">Adresse prüfen</VariableLocalized>
                <VariableLocalized iso="ENG">Validate address</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_button_text</Name>
            </Variable>

            <Variable>
                <VariableLocalized iso="GER">Die E-Mail Adresse scheint nicht korrekt zu sein.</VariableLocalized>
                <VariableLocalized iso="ENG">The email address does not seem to be correct.</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_status_email_not_correct</Name>
            </Variable>

            <Variable>
                <VariableLocalized iso="GER">Das E-Mail Postfach ist nicht erreichbar.</VariableLocalized>
                <VariableLocalized iso="ENG">The email inbox cannot be reached.</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_status_email_cant_receive</Name>
            </Variable>

            <Variable>
                <VariableLocalized iso="GER">Prüfen Sie die Schreibweise.</VariableLocalized>
                <VariableLocalized iso="ENG">Check the spelling</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_status_email_syntax_error</Name>
            </Variable>

            <Variable>
                <VariableLocalized iso="GER">Die E-Mail Adresse existiert nicht. Prüfen Sie die Schreibweise.</VariableLocalized>
                <VariableLocalized iso="ENG">The email address does not exist. Check the spelling.</VariableLocalized>
                <Description></Description>
                <Name>endereco_jtl4_client_status_email_no_mx</Name>
            </Variable>
        </Locales>
        <Adminmenu>
            <Settingslink sort="1">
                <Name>Einstellungen</Name>
                <Setting type="text" initialValue="" sort="0" conf="N">
                    <Name>Zugangsdaten</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="text" initialValue="" sort="1" conf="Y">
                    <Name>
                        API Schlüssel
                        <![CDATA[<br><small>Hier <a href="#">anfragen</a></small>]]>
                    </Name>
                    <Description>
                        <![CDATA[Den API Key kannst du entweder über die Website von Endereco (<a href="https://www.endereco.de" target="_blank">www.endereco.de</a>) eine Anfrage erstellen oder über eine E-Mail an <a href="mailto:info@endereco.de">info@endereco.de</a> anfragen.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_api_key</ValueName>
                </Setting>
                <Setting type="text" initialValue="https://endereco-service.de/rpc/v1" sort="2" conf="Y">
                    <Name>Service URL</Name>
                    <Description>
                        <![CDATA[Hier sollte nur die Live URL in den ausgelieferten Modulen hinterlegt werden.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_remote_url</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="3" conf="N">
                    <Name>Adress-Services Konfiguration</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="6" conf="Y">
                    <Name>Adressprüfung und Eingabe-Assistent aktivieren</Name>
                    <Description>
                        <![CDATA[Mit dieser Einstellung wird bestimmt, ob der die Adressprüfung und Eingabe-Assistent im Frontend ausgeführt werden sollen. Ist sie inaktiv, so werden während der Eingabe keine Adressen geprüft.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_ams_active</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="6" conf="Y">
                    <Name>Ergebnis der Adressprüfung ins Kommetarfeld der Bestellung schreiben</Name>
                    <ValueName>endereco_jtl4_client_ams_to_comment</ValueName>
                    <Description>
                        <![CDATA[Der Ergebnis der Prüfung wird interpretiert und in lesbarer Form im Kommetarfeld der Bestellung gespeichert. Später ist dieser Kommentar in der WaWi sichtbar.]]>
                    </Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="6" conf="Y">
                    <Name>Auch Bestandskunden einmalig prüfen</Name>
                    <Description>
                        <![CDATA[Bestandskunden, die noch nicht geprüft wurden, werden bei einem Login und Aufruf einer Adressformular-Seite automatisch geprüft.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_check_existing</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="9" conf="Y">
                    <Name>Felder bei nur einem verbleibenden Adressvorschlag automatisch ausfüllen (SmartAutocomplete)</Name>
                    <Description>
                        <![CDATA[Wenn während der Eingabe von Postleitzahl, Ort oder der Straße die Eingabe eindeutig ist (nur ein Vorschlag), wird diese Eingabe in das Eingabefeld automatisch übernommen und die Eingabe für 1 Sekunde blockiert, damit der Nutzer es merken kann. Löscht der Nutzer seine Eingabe, wird der SmartAutocomplete für seine Session deaktiviert.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_smart_fill</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="10" conf="N">
                    <Name>E-Mail Service</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="11" conf="Y">
                    <Name>E-Mail Adressprüfung aktivieren</Name>
                    <Description>
                        <![CDATA[Hiermit wird bestimmt, ob die E-Mail Adresse geprüft werden soll. Wir prüfen die Schreibweise (Syntax) der E-Mail, den Host und ob die E-Mailadresse tatsächlich existiert. Zusätzlich wird überprüft ob E-Mails zustellbar sind.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_es_active</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="11" conf="Y">
                    <Name>E-Mail Statusmeldungen anzeigen</Name>
                    <Description>
                        <![CDATA[Diese Einstellung bestimmt, ob unterhalb des E-Mail-Eingabefeldes die Fehlermeldungen in Textform angezeigt werden sollen.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_show_email_status</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="12" conf="N">
                    <Name>Anredeprüfung</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="13" conf="Y">
                    <Name>Anredeprüfung basierend auf dem Vornamen aktivieren und Anrede automatisch setzen</Name>
                    <Description>
                        <![CDATA[Wenn nach der Eingabe des Vornamens keine Anrede ausgewählt ist und der Vorname einem Geschlecht eindeutig zugeordnet werden kann, dann setzen wir die Anrede. Ansonsten markieren wir die Anrede als richtig (grün) oder möglicherweise fehlerhaft (orange).]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_ps_active</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="14" conf="N">
                    <Name>Designanpassungen</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="15" conf="Y">
                    <Name>Standard-CSS nutzen</Name>
                    <Description>
                        <![CDATA[Unser Modul liefert im Standardfall alle benötigte Styles. Falls man diese jedoch wesentlich überarbeiten möchte, kann man mit dieser Einstellung die Styles deaktivieren. Dadurch entstehen später keine CSS-Konflikte.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_use_standart_css</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="16" conf="Y">
                    <Name>Hauptfarbe im Dropdown</Name>
                    <ValueName>endereco_jtl4_client_color_1</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="17" conf="Y">
                    <Name>Fehlerfarbe im Modal</Name>
                    <ValueName>endereco_jtl4_client_color_2</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="18" conf="Y">
                    <Name>Auswahlfarbe im Modal</Name>
                    <ValueName>endereco_jtl4_client_color_3</ValueName>
                </Setting>
                <Setting type="text" initialValue="" sort="19" conf="N">
                    <Name>Entwicklereinstellungen</Name>
                    <ValueName>Spacer</ValueName>
                    <Description></Description>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="20" conf="Y">
                    <Name>Adressprüfung beim Absenden des Formulars auslösen</Name>
                    <Description>
                        <![CDATA[Über diese Einstellung wird bestimmt, dass beim Klicken auf "Absenden" oder betätigen der Enter-Taste die Adresse geprüft werden soll. Diese Funktion kann man deaktivieren, wenn man programmiertechnisch den Zeitpunkt der Prüfung selber steuern möchte.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_onsubmit_trigger</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="21" conf="Y">
                    <Name>Adressprüfung sofort nach verlassen des Hausnummern Feldes auslösen</Name>
                    <Description>
                        <![CDATA[Ist die Funktion aktiv, wird die Adressprüfung sofort nach Eingabe der Adresse angestoßen. Ist die deaktiviert, erfolg die Prüfung beim Klick auf den "Weiter" Button.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_onblur_trigger</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="on" sort="22" conf="Y">
                    <Name>Das Absenden des Formulars nach der Adressauswahl fortsetzen</Name>
                    <Description>
                        <![CDATA[Mit dieser Einstellung wird bestimmt, ob nach der Auswahl und Übernahme einer Adresse das Absenden der Form fortgesetzt wird oder ob der Nutzer noch mal auf "Absenden" klicken muss.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_resume_submit</ValueName>
                </Setting>
                <Setting type="checkbox" initialValue="" sort="23" conf="Y">
                    <Name>Debuginformationen in der Browserkonsole ausgeben</Name>
                    <Description>
                        <![CDATA[Hierüber bestimmt man, ob das Modul die Debuginformation in der Browser Konsole ausgibt. Nützlich für Debugzwecke.]]>
                    </Description>
                    <ValueName>endereco_jtl4_client_show_debug_info</ValueName>
                </Setting>
            </Settingslink>
        </Adminmenu>
        <JS>
            <file>
                <name>endereco.min.js</name>
                <priority>8</priority>
                <position>body</position>
            </file>
        </JS>
    </Install>
</jtlshop3plugin>
